{
  "name": "frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "sweetalert2": "^11.15.10",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "vite": "^6.0.5"
  },
"build": {
  "asar": true,
  "appId": "com.tuapp.desktop",
  "productName": "Certi-Granja",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "src/main.js"
  ],
  "extraResources": [
    {
      "from": "../BACKEND",
      "to": "backend"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "public/Logo.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/Logo.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}

  }
